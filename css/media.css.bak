@media (max-width:768px){
    header .fa-bars{
        display: block;
    }
    header .menu{
        position: fixed;
        background-color: rgb(255, 57, 57);
        width: 100%;
        
        left: -100%;
        transition: all 0.5s;
        border-radius: 5px;
        z-index: 9999;
    }
    header .menu {
        flex-direction: column;
        justify-content: center;  
    }
    .show header .menu{
        left: 0;
    }
}