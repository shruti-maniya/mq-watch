    }
    h1{
        font-size: 50px;
    }
    p{
        font-size: 14px;
    }
    .bg15 p{
        font-size: 14px;
        margin: auto;
        padding: 0;
    }
    .bg15 a{
        font-size: 16px;
    }
    .bg10 .email{
        width: 50%;
    }
    .form{
        padding-left: 50px;
    }
    .icofont-play{
        width: 60px;
        height: 60px;
        line-height: 60px;
        font-size: 30px;
        text-align: center;
        align-items: center;
        margin-top: 25%;
    }
}
